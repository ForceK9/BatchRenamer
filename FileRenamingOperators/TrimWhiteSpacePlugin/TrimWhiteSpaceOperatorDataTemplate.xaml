<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:BatchRenamingCore;assembly=BatchRenamingCore"
                    xmlns:local="clr-namespace:FileRenamingOperators.TrimWhiteSpacePlugin">
    <DataTemplate x:Key="renameOperator">
        <Border BorderBrush="#FFDDDDDD"
                BorderThickness="0,0,0,1">
            <HeaderedContentControl ToolTip="Trim all the leading and trailing white-space characters from the filenames."
                                BorderThickness="1">
                <HeaderedContentControl.Header>
                    <TextBlock Text="Trim Whitespace"
                           VerticalAlignment="Center" Margin="20,5,5,5"
                           FontWeight="Bold"
                           FontSize="14"
                           Height="20"/>
                </HeaderedContentControl.Header>
            </HeaderedContentControl>
        </Border>
    </DataTemplate>
</ResourceDictionary>